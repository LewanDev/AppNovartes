<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ******************** LAYOUTS ******************** -->
    <style name="CustomLinearLayout">
        <item name="android:padding">16dp</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">#EEEEEE</item>
    </style>

    <style name="CustomLinearLayout.Vertical">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">#EEEEEE</item>
    </style>

    <style name="CustomLinearLayout.Horizontal">
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">#EEEEEE</item>
    </style>

    <style name="CustomNavigationBar">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">#EEEEEE</item>
    </style>


    <!-- ******************** TEXT ******************** -->

    <style name="TextTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#222222</item>
    </style>

    <style name="TextSubtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="TextBody">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="TextTitleNavigationBar">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#222222</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>



    <!-- ******************** BUTTONS ******************** -->

    <style name="PrimaryButton" >
        <item name="android:backgroundTint">#2196F3</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:backgroundTint">#DDDDDD</item>
        <item name="android:textColor">#222222</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RedButton" >
        <item name="android:backgroundTint">#830606</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>